<resources>

    <style name="Theme.Holo" parent="Theme.Base.AppCompat" />

    <style name="Theme.Holo.Light" parent="Theme.Base.AppCompat.Light" />

    <style name="Theme.Holo.Light.DarkActionBar" parent="Theme.Base.AppCompat.Light.DarkActionBar" />

    <style name="Theme.Holo.Dialog" parent="@android:style/Theme.Dialog" />

    <style name="Theme.Holo.Dialog.Light" parent="@android:style/Theme.Dialog" />

    <style name="Theme.Holo.PopUp" parent="Theme.Base.AppCompat">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="Theme.Holo.PopUp.Light" parent="Theme.Base.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Holo.PopUp.Light.DarkActionBar" parent="Theme.Base.AppCompat.Light.DarkActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NotificationLine2">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="NotificationInfo">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="NotificationTime">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="NotificationEmphasis">
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="NotificationPrimaryText">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="NotificationSecondaryText">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="NotificationSubjectText">
        <item name="android:textColor">#999999</item>
    </style>

</resources>