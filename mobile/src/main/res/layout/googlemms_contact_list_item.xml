<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mms_layout_view_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <View
        android:id="@+id/vNewMessageIndicator"
        android:layout_width="8dip"
        android:layout_height="match_parent" />

    <QuickContactBadge
        android:id="@+id/qcbAvatar"
        android:layout_width="64dip"
        android:layout_height="64dip" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvContactDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="1dp"
            android:text="Contact Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLastMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvContactDisplayName"
            android:layout_below="@+id/tvMessageDate"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Last Message Received"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/tvMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvContactDisplayName"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingRight="12dip"
            android:text="12/31/12"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorPrimary" />
    </RelativeLayout>

</LinearLayout>