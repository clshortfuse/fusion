<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mms_layout_view_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/message_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llMediaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="6dip"
            android:orientation="horizontal"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDownloadMMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="6dip"
            android:gravity="right"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:gravity="right"
            android:linksClickable="false"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="6dip"
            android:text="MessageText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingRight="12dip"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffacacac" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivService"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:scaleType="center"
        android:visibility="visible" />

    <QuickContactBadge
        android:id="@+id/qcbAvatar"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:visibility="visible" />

    <View
        android:id="@+id/vServiceIndicator"
        android:layout_width="4dip"
        android:layout_height="match_parent"
        android:visibility="visible" />

</LinearLayout>